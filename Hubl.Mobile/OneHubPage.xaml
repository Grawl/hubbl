<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Hubl.Mobile.OneHubPage">
	<ContentPage.Content>
	<StackLayout Orientation="Vertical" BackgroundColor="White">
		<StackLayout Orientation="Horizontal">
			<Label x:Name="CurrentSong" FontSize = "24.0"/>
			<Label x:Name="Author" FontSize="18.0"/>
		</StackLayout>
		<StackLayout Orientation="Horizontal">
			<Label x:Name="ElapsedTime" Width = "30" />
			<ProgressBar x:Name="SongProgress" />
			<Label x:Name="RemainingTime" Width = "30" />				
		</StackLayout>

		<ListView  x:Name="SongsView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout BackgroundColor="#eee"
                        Orientation="Vertical">                            
                           <Label Text="{Binding Name}"
                                TextColor="#f35e20" />
                           <Label Text="{Binding Author}"
                                HorizontalOptions="EndAndExpand"
                                TextColor="#503026" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
	</StackLayout>

	</ContentPage.Content>
</ContentPage>
